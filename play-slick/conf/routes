
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET           /auth                  controllers.AuthController.index

GET           /users                 controllers.UserController.getUsers
GET           /users/:id             controllers.UserController.getUser(id: String)
POST          /users                 controllers.UserController.addUser
PUT           /users/:id             controllers.UserController.updateUser(id: String)
DELETE        /users/:id             controllers.UserController.deleteUser(id: String)

GET           /products              controllers.ProductController.getProducts
GET           /products/:id          controllers.ProductController.getProduct(id: String)
POST          /products              controllers.ProductController.addProduct
PUT           /products/:id          controllers.ProductController.updateProduct(id: String)
DELETE        /products/:id          controllers.ProductController.deleteProduct(id: String)

GET           /categories            controllers.CategoryController.getCategories
GET           /categories/:id        controllers.CategoryController.getCategory(id: String)
POST          /categories            controllers.CategoryController.addCategory
PUT           /categories/:id        controllers.CategoryController.updateCategory(id: String)
DELETE        /categories/:id        controllers.CategoryController.deleteCategory(id: String)

GET           /orders                controllers.OrderController.getOrders
GET           /orders/:id            controllers.OrderController.getOrder(id: String)
POST          /orders                controllers.OrderController.addOrder
PUT           /orders/:id            controllers.OrderController.updateOrder(id: String)
DELETE        /orders/:id            controllers.OrderController.deleteOrder(id: String)

      